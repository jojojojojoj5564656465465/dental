---
interface Props {
  title: string
  link: string
  marginInlineCustomProps?: string
}
const { title, link, marginInlineCustomProps = '0 auto' } = Astro.props
import { buttonCallToAction, buttonCallToAction_icon, marginInlineCustom } from './button.css'
import * as v from 'valibot'
import { assignInlineVars } from '@vanilla-extract/dynamic'
const PixelStringSchema = v.pipe(v.string())
const pixel = v.parse(PixelStringSchema, marginInlineCustomProps)
---

<button
  class={buttonCallToAction}
  type="button"
  aria-label="rendez-vous"
  tabindex="0"
  style={assignInlineVars({
    [marginInlineCustom]: pixel,
  })}
>
  <a href={link}>{title}</a>
  <span class={buttonCallToAction_icon}>â†‘</span>
</button>

---
interface DentistCardProps {
  name: string
  university: string
  photoUrl: string
  doctolibUrl: string
  description?: string // Optionnel, pour fournir une description du dentiste
}

const { name, university, photoUrl, doctolibUrl, description } = Astro.props
---

<div
  class="max-w-sm mx-auto bg-white rounded-lg shadow-md overflow-hidden border border-gray-200"
>
  <!-- Photo du docteur -->
  <div class="bg-gray-100 h-48 w-full flex items-center justify-center">
    <img
      src={photoUrl}
      alt={`Photo du Dr. ${name}`}
      class="w-32 h-32 rounded-full object-cover"
    />
  </div>

  <!-- Contenu de la carte -->
  <div class="p-6">
    <!-- Nom et Prénom -->
    <h2 class="text-xl font-semibold text-gray-800" id="dentist-name">
      {name}
    </h2>
    <!-- Université -->
    <p class="text-sm text-gray-600 mt-1" id="dentist-university">
      Diplômé de {university}
    </p>

    <!-- Description (optionnelle) -->
    {description && <p class="text-gray-700 mt-4">{description}</p>}

    <!-- Bouton prendre rendez-vous -->
    <a
      href={doctolibUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="mt-6 inline-block w-full text-center bg-sky-600 text-white font-medium py-2 rounded-lg hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-sky-400 focus:ring-offset-2"
      aria-labelledby="appointment-button"
    >
      Prendre rendez-vous
    </a>
  </div>
</div>

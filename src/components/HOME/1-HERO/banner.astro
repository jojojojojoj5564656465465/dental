---
import { Icon } from "astro-icon/components";
import Button from "../../button/button.astro";
import * as s from "./hero.css";
import { container } from "@recipe";
---

<section
  class={container({ theme: "darkBlueBanner", background: true, size: "full" })}
>
  <div class={s.bannerWrapper}>
    <div class={s.banner__element}>
      <Icon class={s.banner__element_icon} name={"phone"} />
      <h6>Besoin d'aide</h6>
      <p>Applez : (+33) 6 70 75 50 94</p>
    </div>
    <hr class={s.banner_hr} />
    <div class={s.banner__element}>
      <Icon class={s.banner__element_icon} name={"watch"} />
      <h6>Heures</h6>
      <p>Lundi au Vendredi 09:00 18:30</p>
    </div>
    <div class={s.banner__element}>
      <Icon class={s.banner__element_icon} name={"phone"} />
      <h6>Whatsapp</h6>
      <p>Ecrivez nous : (+33) 6 70 75 50 94</p>
    </div>
  </div>
</section>

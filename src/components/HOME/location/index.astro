---
import { containerGridMaxColumn, textRecipe } from '@recipe'
import Title from 'src/components/Layout-Component/topContent.astro'
import Button from '../../button/button.astro'
const contactInfo = [
  {
    id: 'address',
    text: '24/11 Robert Road, New York, USA',
    iconPaths: [
      { d: 'M15 10.5a3 3 0 11-6 0 3 3 0 016 0z' },
      {
        d: 'M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z',
      },
    ],
    ariaLabel: 'Adresse',
  },
  {
    id: 'phone',
    text: '+(123) 698-5245',
    iconPaths: [
      {
        d: 'M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z',
      },
    ],
    ariaLabel: 'Téléphone',
  },
  {
    id: 'email',
    text: 'info@domain.com',
    iconPaths: [
      {
        d: 'M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75',
      },
    ],
    ariaLabel: 'Email',
  },
  {
    id: 'hours',
    text: 'Mon to Sat 9:00AM to 9:00PM',
    iconPaths: [{ d: 'M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z' }],
    ariaLabel: "Heures d'ouverture",
  },
]
---

<section
  class={containerGridMaxColumn({
    theme: "blueLightBg",
    size: "medium",
    maxColumn: 2,
    sizeOfBox: 300,
  })}
>
  <div class="grid grid-cols-1 gap-8 md:grid-cols-2 md:gap-12">
    <!-- Colonne Gauche: Carte -->
    <div class="h-96 overflow-hidden rounded-lg shadow-md md:h-full">
      <!-- *** REMPLACEZ CECI PAR VOTRE IFRAME GOOGLE MAPS *** -->
      <!-- Exemple de placeholder -->
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387190.2799160891!2d-74.2598770394494!3d40.69767006288568!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2sca!4v1678886588910!5m2!1sen!2sca"
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="Google Map of New York"
      >
      </iframe>
      <!-- Fin du placeholder -->
    </div>

    <!-- Colonne Droite: Informations de Contact -->
    <div class="grid align-items-start gap-4 md:gap-6">
      <div>
        <Title
          subtitle="Trouvez-nous"
          PreTitle="Get Free"
          title=" Professional Consultation"
          gap="smallGap"
        />
        <div class="mt-4 grid gap-3 md:gap-4">
          {/* Ajout d'un margin-top pour espacer du titre */}
          {
            contactInfo.map((item) => (
              <div class="flex items-center gap-x-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="h-6 w-6 flex-shrink-0 text-teal-500"
                  aria-labelledby={`contact-icon-title-${item.id}`}
                  role="img"
                >
                  {item.iconPaths.map((path) => (
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d={path.d}
                    />
                  ))}
                </svg>
                <span>{item.text}</span>
              </div>
            ))
          }
        </div>
    </div>
    <Button  title="ddgdfsg" link="/fdgfd"/> 
</div>
  </div>
</section>
